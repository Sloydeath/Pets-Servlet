<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/pets_db</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="connection.pool_size">3</property>

        <property name="hibernate.enable_lazy_load_no_trans" value="true" />
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="hbm2ddl.auto">update</property>

        <mapping  class="com.pets.model.Person"/>
        <mapping  class="com.leverx.pets.model.Pet"/>
        <mapping  class="com.leverx.pets.model.Cat"/>
        <mapping  class="com.leverx.pets.model.Dog"/>

        <!--        <property name="show_sql">true</property>
                <property name="hibernate.use_sql_comments">true</property>
                <property name="hibernate.format_sql">true</property>-->
    </session-factory>
</hibernate-configuration>